<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:padding="8dp"
    android:id="@+id/HomeFragment">

    <Button
        android:id="@+id/LogoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"/>


    <Button
        android:id="@+id/TracciamentoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LogoutID"
        android:layout_marginTop="5dp"
        android:text="Attiva tracciamento" />

    <Button
        android:id="@+id/VisualizzazioneID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TracciamentoID"
        android:layout_marginTop="5dp"
        android:text="Ordine alfabetico" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_dialog"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageID"/>

        <TextView
            android:id="@+id/dialog_nomeOrganizzazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Nome "
            android:textColor="@color/whiteColor"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/Button_moreInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="start"
            android:background="@color/whiteColor"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Maggiori informazioni"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/Button_aggiungiPreferiti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="1dp"
            android:background="@drawable/button_border"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Aggiungi a MyStalkers"
            android:textAlignment="textStart" />

    </LinearLayout>




</LinearLayout>
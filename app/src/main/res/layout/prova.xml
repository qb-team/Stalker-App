<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:background="@drawable/custom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Hai dimenticato la password?"
            android:textColor="@color/whiteColor"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:padding="15dp"
            android:id="@+id/insertEmailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:hint="Inserisci l'email"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/whiteColor"
            android:backgroundTint="@color/colorAccent"
            android:textColorHint="@color/whiteColor" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            >

            <Button
                android:id="@+id/annulID"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_left"
                android:text="Annulla"
                android:textAlignment="center"
                android:gravity="center" />
            <Button
                android:id="@+id/accessID"
                android:layout_width="146dp"
                android:background="@drawable/button_border_right"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="Invia"
                android:textAlignment="center"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008577"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageID"/>
        <TextView
            android:id="@+id/dialog_nomeOrganizzazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nome "
            android:textColor="@color/whiteColor"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_tracciamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="sei dentro"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/Button_moreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@color/whiteColor"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="More info"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/Button_aggiungiPreferiti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/whiteColor"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Aggiungi a MyStalkers"
            android:textAlignment="textStart" />
    </LinearLayout>
    
</RelativeLayout>
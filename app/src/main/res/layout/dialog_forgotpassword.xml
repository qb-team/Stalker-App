<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:background="@drawable/custom_border"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_border"
        android:padding="15dp"
        android:text="Hai dimenticato la password?"
        android:textColor="@color/whiteColor"
        android:textSize="20dp" />

    <EditText
        android:padding="15dp"
        android:id="@+id/insertEmailID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:hint="Inserisci l'email"
        android:inputType="textEmailAddress"
        android:fontFamily="sans-serif"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/blackColor"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@color/blackColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Invia"
        android:background="@drawable/button_round_border"
        android:textColor="@color/whiteColor"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/accessID"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />




</LinearLayout>




</RelativeLayout>